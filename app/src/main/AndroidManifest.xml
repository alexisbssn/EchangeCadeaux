            android:name=".Activities.Google_signin"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activities.Homepage" />
        <activity android:name=".Activities.ProfilePage" />
        <activity
            android:name=".Activities.Wishlist"
            android:label="@string/title_activity_wishlist"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".Activities.GroupSearch" />
        <activity android:name=".Activities.GroupPage" />
        <activity android:name=".Activities.Login" />
        <activity android:name=".Activities.MyGroups" />
        <activity android:name=".Activities.EditGroup"/>
        <activity android:name=".Activities.EditWish" android:theme="@android:style/Theme.Dialog"/>
    </application>

</manifest>
